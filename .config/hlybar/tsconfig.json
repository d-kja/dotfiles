{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "checkJs": true,
    "allowJs": true,
    "module": "ES2022",
    "target": "ES2020",
    "lib": [
      "ES2023"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "ags/gtk4",
    "moduleResolution": "Bundler",
    "include": [
      "./@girs/**/*.d.ts"
    ],
    "paths": {
      "astal": [
        "/usr/share/astal/gjs"
      ],
      "astal/*": [
        "/usr/share/astal/gjs/*"
      ]
    }
  }
}
